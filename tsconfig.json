{
  "compilerOptions": {

    // Specify the target JavaScript version to compile to (supports async/await, spread, etc.)
    "target": "ES2018",

    // Specify the module system (CommonJS is standard for Node.js environments)
    "module": "commonjs",

    // Allows default imports from CommonJS modules, improving compatibility and import syntax
    "esModuleInterop": true,

    // Enforces consistent casing in import paths to avoid bugs, especially on case-sensitive systems
    "forceConsistentCasingInFileNames": true,

    // Enables all strict type-checking options (null checks, no implicit any, etc.)
    "strict": true,

    // Skips type-checking of declaration files (.d.ts), speeding up compilation
    "skipLibCheck": true,

    "moduleResolution": "node",
    
    "types": ["node", ".prisma/client"]
    
  }
}
